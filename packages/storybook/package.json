{
  "name": "@xm-ngx/storybook",
  "version": "1.0.0",
  "description": "An npm package for seamless integration of the Storybook library into your @xm-ngx work project, enabling efficient component development and documentation.",
  "repository": {
    "type": "git",
    "url": "https://github.com/xm-online/xm-webapp.git",
    "directory": "packages/cli"
  },
  "scripts": {
    "build-storybook": "npm run docs:json && build-storybook",
    "create-symlink": "test ! -e angular.json && ln -s ../../angular.json angular.json || echo 'angular.json already exists'",
    "docs:json": "compodoc -p ../../tsconfig.json -e json -d . --disableRoutesGraph",
    "storybook": "npm run create-symlink && npm run docs:json && start-storybook -p 6006 -c .storybook",
    "storybook-self": "start-storybook -p 6006 -c .storybook"
  },
  "keywords": [
    "xm-ngx",
    "storybook"
  ],
  "author": "Andrii Andrusevych",
  "license": "Apache-2.0",
  "dependencies": {
    "@babel/runtime": "^7.21.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.3",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/angular": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "babel-loader": "^9.1.2",
    "eslint-plugin-storybook": "^0.6.10",
    "raw-loader": "^1.0.0"
  }
}
